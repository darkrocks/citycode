@model Guide.Model.Entities.Image
@section scripts
{
	@Scripts.Render("~/bundles/jqueryval")
}

<div class="row">
	<div class="col-md-12">
		<h2>Administration</h2>
		<h3>Create image</h3>

		@using (Html.BeginForm("Create", "Images", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
		{
			<fieldset>
				@(this.Html.HiddenFor(model => model.Id))

				<div class="form-group">
					@(this.Html.LabelFor(model => model.File, new { @class = "col-sm-2 control-label" }))
					<div class="col-sm-10">
						<input type="file" name="File" />
						@(this.Html.ValidationMessageFor(model => model.File))
					</div>
				</div>
				<div class="form-group">
					@(this.Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" }))
					<div class="col-sm-10">
						@Html.EditorFor(m => m.Name)
						@(this.Html.ValidationMessageFor(model => model.Name))
					</div>
				</div>
				<input type="submit" value="Create" class="btn btn-default" />
			</fieldset>
		}
	</div>
</div>